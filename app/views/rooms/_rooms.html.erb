<div class="mb-3">
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    Create a room
  <% end %>
</div>

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    The are no rooms
  </div>
<% end %>
<style type="text/css">
  .input-group .form-control {
    position: relative;
    z-index: 2;
    float: left;
    width: 70%;
    margin-bottom: 0;
}
<style type="text/css">
  .room-nav-link {
    border: 1px solid #cce5ff;
    background: #00000;
}
</style>
</style>