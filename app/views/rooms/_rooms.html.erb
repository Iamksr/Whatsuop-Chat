<div class="mb-3">
  <%if current_user.role == "admin"%>
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    Create a room
  <% end %>
  <% end %>
</div>

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
       <%if current_user.role == "admin"%>
     <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
     <% end %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    The are no rooms
  </div>
<% end %>
<style type="text/css">
  .input-group .form-control {
    position: relative;
    z-index: 2;
    float: left;
    width: 64%;
    margin-bottom: 0;
}
  .room-nav-link {
    border: 1px solid #12b2e2 !important;
    background: #000000 !important; 
}
</style>