<h1>
  <%= @room.name %>
</h1>

<div class="row">
  <div class="col-12 col-md-3">
    <%= render partial: 'rooms' %>
  </div>

  <div class="col">
    <div class="chat">
      <h2>Chats </h2>
      <% @room_messages.each do |room_message| %>
        <div class="chat-message-container">
          <div class="row no-gutters">
            <div class="col-auto text-center">
              <% if room_message.user.image.present? %>
              <%= image_tag room_message.user.image.url, class: "avatar" %>
              <% else %>
              <img src="<%= gravatar_url(room_message.user) %>" class="avatar" alt="">
              <% end %>
            </div>

            <div class="col">
              <div class="message-content">
                <p class="mb-1">
                  <%= room_message.message %>
                </p>

                <div class="text-right">
                  <small>
                    <%= room_message.user.username %>
                  </small>
                </div>
              </div><br>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= simple_form_for @room_message, remote: true do |form| %>
      <div class="input-group mb-3">
        <%= form.input :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input', required: true
                                 } %>
        <div class="input-group-append">
          <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
        </div>
      </div>

      <%= form.input :room_id, as: :hidden %>
    <% end %>
  </div>
</div>
<style type="text/css">
  .chat {
  background-color: transparent;
}
.message-content {
    padding: 5px !important;
    background: #D3D3D3 !important;
    width: 98% !important;
    border-bottom-left-radius: 10px;
    border-top-left-radius: 10px;
  }
  .text-right{
    background-color: #e082402e;
  }

.chat-input {
 border: px solid #000000;
  clear: both;
  overflow: hidden;
}
</style>
<script type="text/javascript">
  $(document).ready(function() {            
    $('input').attr('required', true);   
  });
</script>